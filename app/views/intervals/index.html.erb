<h1>Listing intervals</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Detail</th>
      <th>Orders</th>
      <th>Quantity</th>
      <th>Summary</th>
      <th>Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intervals.each do |interval| %>
      <tr>
        <td><%= interval.detail %></td>
        <td><%= interval.orders.count %></td>
        <td><%= interval.quantity %></td>
        <td><%= interval.summary %></td>
        <td><%= interval.fee %></td>
        <td><%= link_to 'Show', interval %></td>
        <td><%= link_to 'Edit', edit_interval_path(interval) %></td>
        <td><%= link_to 'Destroy', interval, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interval', new_interval_path %>
