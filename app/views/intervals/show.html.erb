<p id="notice">
	<%= notice %>
</p>

<p>
	<strong>Detail:</strong>
	<%= @interval.detail %>
</p>
<p>
	<strong>Orders:</strong>
	<%= @interval.orders.count %>
</p>
<p>
	<strong>Quantity:</strong>
	<%= @interval.quantity %>
</p>
<p>
	<strong>Summary:</strong>
	<%= @interval.summary %>
</p>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Product ID.</th>
			<th>Product Code</th>
			<th>Product Name</th>
			<th>Volume</th>
			<th>SP Price</th>
			<th>Quantity</th>
			<th>Amount</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.product_id %></td>
			<td><%= item.code %></td>
			<td><%= item.name %></td>
			<td><%= item.volume %></td>
			<td><%= item.sp_price %></td>
			<td><%= item.quantity %></td>
			<td><%= item.amount %></td>
		</tr>
		<% end %>

	</tbody>
</table>

<%= link_to 'Edit', edit_interval_path(@interval) %> |
<%= link_to 'Back', intervals_path %>
