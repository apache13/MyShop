<h1>Listing line_items</h1>
<%= render "line_items/search" %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Order ID.</th>
      <th>Interval</th>
      <th>Customer</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
      	<td><%= line_item.order.id %></td>
      	<td><%= line_item.order.interval.detail %></td>
      	<td><%= line_item.order.customer%></td>
      	<td><%= line_item.product.code+' ('+line_item.product.name+' '+line_item.product.volume+' , '+line_item.product.sp_price.to_s+' บาท )' %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.amount %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line item', new_line_item_path %>
