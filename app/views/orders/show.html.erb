<p id="notice">
	<%= notice %>
</p>

<p>
	<strong>Customer:</strong>
	<%= @order.customer %>
</p>

<p>
	<strong>Quantity:</strong>
	<%= @order.quantity %>
</p>

<p>
	<strong>Total:</strong>
	<%= @order.total %>
</p>

<p>
	<strong>Fee(<%= @order.fee_rate %>%):</strong>
	<%= @order.fee %>
</p>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Order ID.</th>
			<th>Product ID.</th>
			<th>Product Code</th>
			<th>Product Name</th>
			<th>Volume</th>
			<th>SP Price</th>
			<th>Quantity</th>
			<th>Amount</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @order.line_items.each do |line_item| %>
		<tr>
			<td><%= line_item.order.id %></td>
			<td><%= line_item.product.id %></td>
			<td><%= line_item.product.code %></td>
			<td><%= line_item.product.name %></td>
			<td><%= line_item.product.volume %></td>
			<td><%= line_item.product.sp_price %></td>
			<td><%= line_item.quantity %></td>
			<td><%= line_item.amount %></td>
			<td><%= link_to 'Show', line_item %></td>
			<td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
			<td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
