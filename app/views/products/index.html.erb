<h1>Listing products</h1>
<%= render "products/search" %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Product ID.</th>
      <th>Code</th>
      <th>Name</th>
      <th>Volume</th>
      <th>Mk price</th>
      <th>Sp price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
      	<td><%= product.id %></td>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.volume %></td>
        <td class="text-right"><%= number_format(product.mk_price) %></td>
        <td class="text-right"><%= number_format(product.sp_price) %></td>
        <td>
        	<%= link_to 'Show' , product , :data => { :colorbox => true, :colorbox_height => '600px', :colorbox_width => '800px', :colorbox_iframe => true } %> 
        </td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
