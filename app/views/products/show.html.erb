<p id="notice">
	<%= notice %>
</p>

<div class="row">
	<div class="col-md-3">
		<p>
			<%= product_image_tag @product %>
		</p>
	</div>
	<div class="col-md-9">
		<p>
			<strong>Code:</strong>
			<%= @product.code %>
		</p>

		<p>
			<strong>Name:</strong>
			<%= @product.name %>
		</p>

		<p>
			<strong>Description:</strong>
			<%= @product.description %>
		</p>

		<p>
			<strong>Volume:</strong>
			<%= @product.volume %>
		</p>

		<p>
			<strong>Mk price:</strong>
			<%= @product.mk_price %>
		</p>

		<p>
			<strong>Sp price:</strong>
			<%= @product.sp_price %>
		</p>

	</div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
